// WRITE A FUNCTION TO GET THE COMPUTER'S CHOICE
function getComputerChoice() {
    const randomChoice = Math.floor(Math.random() * 3);
    if (randomChoice === 0) {
        return 'Rock';
    } else if (randomChoice === 1) {
        return 'Paper';
    } else {
        return 'Scissor';
    }
}

// WRITE A FUNCTION TO GET THE PLAYER'S CHOICE
function getPlayerChoice() {
    let playerChoice = prompt('Select your weapon', '');
    return playerChoice = playerChoice.charAt(0).toUpperCase() + playerChoice.slice(1).toLowerCase();
}

// WRITE A FUNCTION THAT PLAYS A SINGLE ROUND OF ROCK PAPER SCISSORS.
let playerScore = 0;
let computerScore = 0;
let tieScore = 0;
//variables above are declared to be used for counting score at the end of match and each round

function singleRound(playerSelection, computerSelection) {
    if (playerSelection === 'Rock'  && computerSelection === 'Scissor') {
        playerScore++;
        return 'You Won the round! Rock beats Scissor';        
    } else if (playerSelection === 'Paper' && computerSelection === 'Rock') {
        playerScore++;
        return 'You Won the round! Paper beats Rock';
    } else if (playerSelection === 'Scissor' && computerSelection === 'Paper') {
        playerScore++;
        return 'You Won the round! Scissor beats Paper';
    } else if (playerSelection === 'Rock' && computerSelection === 'Rock') {
        tieScore++;
        return 'Round tied!';
    } else if (playerSelection === 'Paper' && computerSelection === 'Paper') {
        tieScore++;
        return 'Round tied!';
    } else if (playerSelection === 'Scissor' && computerSelection === 'Scissor') {
        tieScore++;
        return 'Round tied!';
    } else if (playerSelection === 'Scissor'  && computerSelection === 'Rock') {
        computerScore++;
        return 'You Lost the round! Rock beats Scissor';        
    } else if (playerSelection === 'Rock' && computerSelection === 'Paper') {
        computerScore++;
        return 'You Lost the round! Paper beats Rock';
    } else if (playerSelection === 'Paper' && computerSelection === 'Scissor') {
        computerScore++;
        return 'You Lost the round! Scissor beats Paper';
    }
}

// WRITE A FUNCTION CALLED GAME() THAT KEEPS A SCORE AND REPORTS WINNER AT THE END
function game() {
    let playerSelection;
    let computerSelection;
    
    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    if (playerScore === 3) {
        return console.log('Flawless Victory! You have defeated the computer 3-0.');
    } else if (computerScore === 3) {
        return console.log('Crushing Defeat! Computer has beaten you 0-3.');
    }

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    if (playerScore === 2 && tieScore === 2) {
        return console.log('MEGA JOB! You have defeated the computer 2-0.');
    } else if (computerScore === 2 && tieScore === 2) {
        return console.log('Huge Disappointment! Computer has beaten you 0-2.');
    } else if (playerScore === 3 && tieScore === 1) {
        return console.log('MEGA JOB! You have defeated the computer 3-0.');
    } else if (playerScore === 3 && computerScore === 1) {
        return console.log('MEGA JOB! You have defeated the computer 3-1.');
    } else if (computerScore === 3 && tieScore === 1) {
        return console.log('Huge Disappointment! Computer has beaten you 0-3.');
    } else if (computerScore === 3 && playerScore === 1) {
        return console.log('Huge Disappointment! Computer has beaten you 1-3.');
    }

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    if (playerScore === 3 && computerScore === 2) {
        return console.log('Amazing effort! You have defeated the computer 3-2.');
    } else if (playerScore === 3 && computerScore === 1 && tieScore ===1) {
        return console.log('Amazing effort! You have defeated the computer 3-1.');
    } else if (playerScore === 2 && computerScore == 1 && tieScore === 2) {
        return console.log('Amazing effort! You have defeated the computer 2-1.');
    } else if (tieScore === 3 && playScore === 2) {
        return console.log('Amazing effort! You have defeated the computer 2-0.');
    } else if (tieScore === 4 && playerScore === 1) {
        return console.log('Amazing effort! You have defeated the computer 1-0.');     
    } else if (computerScore === 3 && playerScore === 2) {
        return console.log('That was close! Computer has beaten you 2-3.');
    } else if (computerScore === 3 && playerScore === 1 && tieScore === 1) {
        return console.log('That was close! Computer has beaten you 1-3.');
    } else if (computerScore === 2 && playerScore === 1 && tieScore === 2) {
        return console.log('That was close! Computer has beaten you 1-2.');
    } else if (tieScore === 3 && computerScore === 2) {
        return console.log('That was close! Computer has beaten you 0-2.');
    } else if (tieScore === 4 && computerScore === 1) {
        return console.log('That was close! Computer has beaten you 0-1.');
    } else if (playerScore === computerScore) {
        return console.log('BOOORING! Game tied 2-2.');
    }
}
game();

