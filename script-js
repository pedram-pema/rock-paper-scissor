// WRITE A FUNCTION TO GET THE COMPUTER'S CHOICE

function getComputerChoice() {
    const randomChoice = Math.floor(Math.random() * 3);
    if (randomChoice === 0) {
        return 'Rock';
    } else if (randomChoice === 1) {
        return 'Paper';
    } else {
        return 'Scissor';
    }
}

// WRITE A FUNCTION TO GET THE PLAYER'S CHOICE

function getPlayerChoice() {
    let playerChoice = prompt('Select your weapon', '');
    return playerChoice = playerChoice.charAt(0).toUpperCase() + playerChoice.slice(1).toLowerCase();
}

// WRITE A FUNCTION THAT PLAYS A SINGLE ROUND OF ROCK PAPER SCISSORS.

let playerScore1 = 0;
let playerScore2 = 0;
let playerScore3 = 0;
let computerScore1 = 0;
let computerScore2 = 0;
let computerScore3 = 0;
let tieScore1 = 0;
let tieScore2 = 0;
let tieScore3 = 0;
//variables above are declared to be used for counting score at the end of match and each round

function singleRound(playerSelection, computerSelection) {


    if (playerSelection === 'Rock'  && computerSelection === 'Scissor') {
        playerScore1 = 1;
        return 'You Won! Rock beats Scissor';        
    } else if (playerSelection === 'Paper' && computerSelection === 'Rock') {
        playerScore2 = 1;
        return 'You Won! Paper beats Rock';
    } else if (playerSelection === 'Scissor' && computerSelection === 'Paper') {
        playerScore3 = 1;
        return 'You Won! Scissor beats Paper';
    } else if (playerSelection === 'Rock' && computerSelection === 'Rock') {
        tieScore1 = 1;
        return 'Round tied!';
    } else if (playerSelection === 'Paper' && computerSelection === 'Paper') {
        tieScore2 = 1;
        return 'Round tied!';
    } else if (playerSelection === 'Scissor' && computerSelection === 'Scissor') {
        tieScore3 = 1;
        return 'Round tied!';
    } else if (playerSelection === 'Scissor'  && computerSelection === 'Rock') {
        computerScore1 = 1;
        return 'You Lost! Rock beats Scissor';        
    } else if (playerSelection === 'Rock' && computerSelection === 'Paper') {
        computerScore2 = 1;
        return 'You Lost! Paper beats Rock';
    } else if (playerSelection === 'Paper' && computerSelection === 'Scissor') {
        computerScore3 = 1;
        return 'You Lost! Scissor beats Paper';
    }
}

// CREATE A FUNCTION THAT KEEPS THE SCORE



// WRITE A FUNCTION CALLED GAME() THAT KEEPS A SCORE AND REPORTS WINNER AT THE END

function game() {
    let playerSelection;
    let computerSelection;
    
    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));

    playerSelection = getPlayerChoice();
    computerSelection = getComputerChoice();
    console.log(singleRound(playerSelection, computerSelection));


    // if (playerScore1 + playerScore2 + playerScore3 === 3 ) {
    //     console.log('MEGA JOB! You have defeated the computer');
    // } else if (computerScore1 + computerScore2 + computerScore3 === 3) {
    //     console.log('CRY NOW! Computer has beaten you!');
    // } else if (tieScore1 + tieScore2 + tieScore3 === 3) {
    //     console.log('BOOORIN! Game tied');
    // }

    if (playerScore1 + playerScore2 + playerScore3 > computerScore1 + computerScore2 + computerScore3 && playerScore1 + playerScore2 + playerScore3 >= tieScore1 + tieScore2 + tieScore3) {
        console.log('MEGA JOB! You have defeated the computer');
    } else if (computerScore1 + computerScore2 + computerScore3 > playerScore1 + playerScore2 + playerScore3 && computerScore1 + computerScore2 + computerScore3 >= tieScore1 + tieScore2 + tieScore3) {
        console.log('CRY NOW! Computer has beaten you!');
    } else  {
        console.log('BOOORIN! Game tied');
    }
}
game();

